{{# each products }}
    <div class="row">
        {{#each this}}
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src="{{this.image}}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3 class="desc">{{this.title}}</h3>
                        <div class="clearfix">
                            <div class="cost">${{this.cost}}</div>
                            <a href="#" class="btn btn-info pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}


